// Tipos de função

// Função declarativa   obrigatóriamente precisa ter um nome
function funcao(){
    console.log('Sou uma mensagem de uma função declarativa!')
}
funcao();


//Expressões de funções     nomeação é opcional

// com nomeação
var funcao =function(){
    console.log('Sou uma mensagem de uma função de expressão')
}
funcao();

//Arrow Function
var funcao = () =>{
    console.log('Sou uma arrow function!');
}
funcao();

